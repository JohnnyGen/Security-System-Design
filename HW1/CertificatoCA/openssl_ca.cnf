[req]
default_bits       = 2048
distinguished_name = req_distinguished_name
x509_extensions    = v3_ca

[req_distinguished_name]
countryName = Country Name (2 letter code)
countryName_default = IT
stateOrProvinceName = State or Province Name (full name)
stateOrProvinceName_default = Napoli
localityName = Locality Name (eg, city)
localityName_default = Napoli
organizationName = Organization Name (eg, company)
organizationName_default = Internet Widgits Pty Ltd
commonName = Common Name (eg, fully qualified host name)
commonName_default = localhost
emailAddress			= emailAddress (eg, your email)
emailAddress_default = gio.gen98@gmail.com

[v3_ca]
keyUsage = critical,keyCertSign,keyEncipherment
extendedKeyUsage = serverAuth
basicConstraints = critical,CA:TRUE
keyUsage = critical,keyCertSign,keyEncipherment
